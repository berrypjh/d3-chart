{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@my-chart-lib/source"],
    "baseUrl": ".",
    "paths": {
      "@my-chart/core": ["libs/chart-core/src/index.ts"],
      "@my-chart/react": ["libs/chart-react/src/index.ts"],
      "@my-chart/shared-data": ["shared/src/index.ts"]
    }
  }
}
